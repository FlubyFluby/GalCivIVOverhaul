<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<LeaderActionList
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="../Schema/LeaderActionDefs.xsd">
<!-- LeaderActionDefs.xml -->

  <LeaderAction>
    <UniqueID>Promote</UniqueID>
    <DisplayName>LeaderAction_Promote_Name</DisplayName>
    <Description>LeaderAction_Promote_Dec</Description>
    <Icon>LeaderAction_Promote.png</Icon>
    <Costs>
      <EffectType>PrecursorNanitesCost</EffectType>
      <BonusType>OneTime</BonusType>
      <Value>1</Value>
    </Costs>
    <Triggers>
      <OnEvent>OnLeaderActionUsed</OnEvent>
      <Target>
        <TargetType>Unit</TargetType>
      </Target>
      <Lifetime>Target</Lifetime>
      <PerformAction>
        <Action>AddTraitToLeader</Action>
        <StringParam>UnitTrait_Cybernetic</StringParam>
      </PerformAction>
    </Triggers>
    <Prerequ>
      <Techs>
        <Option>Tech_Cybernetics</Option>
      </Techs>
    </Prerequ>
	<Preclusions>
      <UnitTrait>
        <Option>UnitTrait_Cybernetic</Option>
      </UnitTrait>
    </Preclusions>
  </LeaderAction>

  <LeaderAction>
    <UniqueID>Gift</UniqueID>
    <DisplayName>LeaderAction_Gift_Name</DisplayName>
    <Description>LeaderAction_Gift_Dec</Description>
    <Icon>LeaderAction_Gift.png</Icon>
    <Cooldown>30</Cooldown>
    <Costs>
      <EffectType>HarmonyCrystalsCost</EffectType>
      <BonusType>OneTime</BonusType>
      <Value>1</Value>
    </Costs>
    <Triggers>
      <OnEvent>OnLeaderActionUsed</OnEvent>
      <Target>
        <TargetType>Unit</TargetType>
      </Target>
      <Lifetime>Target</Lifetime>
      <Modifier>
        <EffectType>Loyalty</EffectType>
        <BonusType>Flat</BonusType>
        <Value>10</Value>
      </Modifier>
    </Triggers>
  </LeaderAction>

  <LeaderAction>
    <UniqueID>Fire</UniqueID>
    <DisplayName>LeaderAction_Fire_Name</DisplayName>
    <Description>LeaderAction_Fire_Dec</Description>
    <Icon>LeaderAction_Fire.png</Icon>
    <Triggers>
      <OnEvent>OnLeaderActionUsed</OnEvent>
      <Target>
        <TargetType>Unit</TargetType>
      </Target>
      <PerformAction>
        <Action>ReturnLeaderToPool</Action>
      </PerformAction>
    </Triggers>
    <Triggers>
      <OnEvent>OnLeaderActionUsed</OnEvent>
      <Target>
        <TargetType>Unit</TargetType>
      </Target>
      <Lifetime>Target</Lifetime>
      <Modifier>
        <EffectType>Loyalty</EffectType>
        <BonusType>Flat</BonusType>
        <Value>-10</Value>
      </Modifier>
    </Triggers>
    <Prerequ>
      <LeaderType>
        <Option>Governor</Option>
        <Option>Diplomat</Option>
        <Option>Leader</Option>
        <Option>Commander</Option>
      </LeaderType>
      <NotSovereign>true</NotSovereign>
    </Prerequ>
  </LeaderAction>

  <LeaderAction>
    <UniqueID>Execute</UniqueID>
    <DisplayName>LeaderAction_Execute_Name</DisplayName>
    <Description>LeaderAction_Execute_Dec</Description>
    <Icon>LeaderAction_Execute.png</Icon>
    <Costs>
      <EffectType>Credits</EffectType>
      <BonusType>OneTime</BonusType>
      <Value>100</Value>
    </Costs>
    <Triggers>
      <OnEvent>OnLeaderActionUsed</OnEvent>
      <Target>
        <TargetType>Unit</TargetType>
      </Target>
      <PerformAction>
        <Action>KillUnitSelf</Action>
        <StringParam>Executed</StringParam>
      </PerformAction>
    </Triggers>
    <Triggers>
      <OnEvent>OnLeaderActionUsed</OnEvent>
      <Target>
        <TargetType>Faction</TargetType>
      </Target>
      <Lifetime>Target</Lifetime>
      <Modifier>
        <EffectType>Loyalty</EffectType>
        <Scope>Global</Scope>
        <Target>
          <TargetType>Unit</TargetType>
        </Target>
        <BonusType>Flat</BonusType>
        <Value>-1</Value>
      </Modifier>
    </Triggers>
    <Triggers>
      <OnEvent>OnLeaderActionUsed</OnEvent>
      <Target>
        <TargetType>Faction</TargetType>
      </Target>
      <Lifetime>Target</Lifetime>
      <Modifier>
        <EffectType>Intimidation</EffectType>
        <BonusType>Flat</BonusType>
        <Value>1</Value>
      </Modifier>
    </Triggers>
    <Prerequ>
      <NotSovereign>true</NotSovereign>
    </Prerequ>
  </LeaderAction>
 
</LeaderActionList>
